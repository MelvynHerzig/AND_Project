<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".QuokkaGameActivity">

    <!-- Score management -->
    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/quokka_counter"
        android:breakStrategy="simple"
        android:singleLine="true"
        android:text="@string/score_image"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Time management -->
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/time_counter"
        android:breakStrategy="simple"
        android:singleLine="true"
        android:text="@string/time_image"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Quokkas -->
    <!-- First line of quokkas -->
    <ImageView
        android:id="@+id/quokka_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="100dp"
        android:contentDescription="@string/quokka_image"
        android:scaleType="fitXY"
        android:src="@drawable/quokka"
        app:layout_constraintBottom_toTopOf="@id/quokka_4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/quokka_2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/quokka_2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/quokka_image"
        android:scaleType="fitXY"
        android:src="@drawable/quokka"
        app:layout_constraintBottom_toTopOf="@id/quokka_5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/quokka_3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="100dp"
        android:contentDescription="@string/quokka_image"
        android:scaleType="fitXY"
        android:src="@drawable/quokka"
        app:layout_constraintBottom_toTopOf="@id/quokka_6"
        app:layout_constraintLeft_toLeftOf="@id/quokka_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Second line of quokkas -->
    <ImageView
        android:id="@+id/quokka_4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="100dp"
        android:contentDescription="@string/quokka_image"
        android:scaleType="fitXY"
        android:src="@drawable/quokka"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/quokka_5"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/quokka_5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/quokka_image"
        android:scaleType="fitXY"
        android:src="@drawable/quokka"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/quokka_6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="100dp"
        android:contentDescription="@string/quokka_image"
        android:scaleType="fitXY"
        android:src="@drawable/quokka"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/quokka_5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Last line of quokkas -->
    <ImageView
        android:id="@+id/quokka_7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="100dp"
        android:contentDescription="@string/quokka_image"
        android:scaleType="fitXY"
        android:src="@drawable/quokka"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/quokka_8"
        app:layout_constraintTop_toBottomOf="@id/quokka_4" />

    <ImageView
        android:id="@+id/quokka_8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/quokka_image"
        android:scaleType="fitXY"
        android:src="@drawable/quokka"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quokka_5" />

    <ImageView
        android:id="@+id/quokka_9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="100dp"
        android:contentDescription="@string/quokka_image"
        android:scaleType="fitXY"
        android:src="@drawable/quokka"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/quokka_8"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quokka_6" />

    <!-- Buttons -->
    <TextView
        android:id="@+id/quit_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="@string/quit_button"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>